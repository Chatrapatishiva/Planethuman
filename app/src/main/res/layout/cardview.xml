<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/llyy">

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    card_view:contentPadding="4dp"
    card_view:cardElevation="4dp"
    android:id="@+id/card"
    card_view:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="#f493"
            android:id="@+id/eventtitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/globe"
            android:id="@+id/eventimage"
            android:layout_below="@+id/eventtitle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:id="@+id/eventdesc"
            android:layout_below="@+id/eventimage"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:id="@+id/location"
            android:layout_below="@+id/eventdesc"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/user"
            android:layout_below="@+id/eventdesc"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat"
            android:src="@drawable/chat"
            android:layout_below="@+id/eventdesc"
            android:layout_toLeftOf="@+id/user"
            android:layout_toStartOf="@+id/user" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:id="@+id/share"
            android:layout_below="@+id/eventdesc"
            android:layout_toRightOf="@+id/location"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unsupport"
            android:layout_below="@id/eventdesc"
            android:layout_centerHorizontal="true"
            android:id="@+id/unsupport" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

</LinearLayout>
